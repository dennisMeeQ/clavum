{
  "name": "clavum",
  "version": "0.0.1",
  "private": true,
  "description": "Secret management for AI agents",
  "license": "AGPL-3.0-only",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "pnpm --recursive exec tsc --noEmit",
    "test": "pnpm --recursive test",
    "test:coverage": "pnpm --recursive test -- --coverage",
    "build": "pnpm --filter @clavum/crypto build",
    "validate": "pnpm check && pnpm typecheck && pnpm build && pnpm test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "prisma": "6.19.2"
  },
  "dependencies": {
    "@prisma/client": "6.19.2"
  }
}
